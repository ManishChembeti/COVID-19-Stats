  <main role="main">

    <section class="jumbotron text-center">
      <div class="container">
        <h1>COVID-19 Stats</h1>
        <p class="lead text-muted">Know the stats of COVID19 all around the World.</p>
        <p>
          <a href="#" class="btn btn-primary my-2">Search By Country</a>

        </p>
      </div>
    </section>

    <div class="album py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-4 text-center">
            <div class="card" style="width: 100%;">
              <div class="text-center card-body bg-dark" style="color:white" >
                <h5 class="card-title">Top-5</h5>
                <p class="card-text">Most affected Countries.</p>
              </div>

              <ul class="list-group list-group-flush">
                <% for(var i=1;i<6;i++){%>
                  <li class="list-group-item"><%=place[i]%></li>
                <%}%>
              </ul>
              <div class="card-body">
                <a href="#" class="btn btn-primary my-">View More</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 text-center">
            <div class="card" style="width: 100%;">
               <img src="" class="card-img-top" alt="">
              <div class="card-body text-center bg-dark" style="color:white">
                <h5 class="card-title">Global Stats</h5>
                <p class="card-text">Stats all over the world.</p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Total Cases: </b><%=tc%></li>
                <li class="list-group-item"><b>Total Deaths:</b><%=td%></li>
                <li class="list-group-item"><b>Total Active:</b><%=ta%></li>
                <li class="list-group-item"><b>Cases Per Million:</b><%=cpm%></li>
                <li class="list-group-item"><b>Deaths Per Million:</b><%=dpm%></li>
              </ul>
              <div class="card-body">
                <a href="#" class="btn btn-primary my-">View More</a>
              </div>
            </div>
          </div>
          <div class="col-md-4 text-center">
            <div class="card" style="width: 100%">
              <img src="..." class="card-img-top" alt="...">
              <div class="card-body bg-dark text-center" style="color:white">
                <h5 class="card-title">Today's Stats</h5>
                <p class="card-text">Count on today's stats.</p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Today's Cases: </b><%=toc%></li>
                <li class="list-group-item"><b>Today's Deaths:</b><%=tod%></li>
                <li class="list-group-item"><b>Critical Cases:</b><%=cr%></li>
              </ul>

            </div>
