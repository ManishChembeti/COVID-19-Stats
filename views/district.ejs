<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>COVID-19 Stats</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">


  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <!-- Custom styles for this template -->
  <link href="css/place.css" rel="stylesheet">

</head>

<body class="text-center">
  <div class="d-flex w-100 h-100 p2 flex-column">
    <header class="masthead mb-auto">
      <div class="inner">
        <h3 class="masthead-brand">CðŸ¦ VID-19</h3>
        <nav class="nav nav-masthead justify-content-center">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/world">World</a>
          <a class="nav-link" href="/country">Country</a>
          <a class="nav-link active" href="/search/state/district">State</a>
        </nav>
      </div>
    </header>

    <h1 style="text-align:center"></h1>
    <div class="text-center">
      <form class="" action="/india" method="get">
      <div class="form-group">
      <label for="exampleFormControlSelect1"></label>
      <center>
        <select class="form-control" style="width:50%" id="exampleFormControlSelect1" name="state">
          <option value="">Search Another</option>
        <% for(var i=0;i<data.length;i++){%>
          <option value="<%=i%>"><%=data[i].state%></option>
        <%}%>
      </select>
      </center>

    </div>
       <input type="submit" class="btn btn-sm btn-secondary" value="Get Details">
      </form>
    </div>
  <div class="row" style="margin-top:3rem;">
    <div class="col-md-12 col-sm-12">
      <table class="table table-borderless table-dark table-hover">
        <thead>
          <tr style="background-color:#1B1C1F" class="bg-danger">
            <th>
              District
            </th>
            <th>
              Confirmed
            </th>
          </tr>
        </thead>
        <tbody>

          <%(data[s].districtData).forEach(i => {%>
          <tr class="">
            <th>
              <%=i.id%>
            </th>
            <td>
              <%=fun(i.confirmed)%>
            </td>
          </tr>
          <% })%>

        </tbody>

      </table>
    </div>
  </div>




    <footer class="mastfoot mt-auto">
      <div class="inner">
        <p>&copy 2020 Jayanth Anala.</p>
      </div>
    </footer>
  </div>
</body>

</html>
